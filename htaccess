SetEnv ENV_HTACCESS_READING true

RewriteEngine On
RewriteBase /

# Redirect all request from /api/.... to /api
RewriteCond "%{REQUEST_URI}"
RewriteRule ^api/(.+)$ api/index.php [QSA,L]

RewriteRule ^admin/(.*)$ index.php [QSA,L]

